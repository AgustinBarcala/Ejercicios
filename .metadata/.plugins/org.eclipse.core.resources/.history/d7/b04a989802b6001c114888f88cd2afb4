int getInt(int * pNumeroIngresado, int maximo, int minimo){
	int auxNumeroIngresado;
	int retorno;
	retorno = -1;
	printf("Ingrese un numero entero:\n");
	scanf("%d" , &auxNumeroIngresado);
	while(auxNumeroIngresado < 1 || auxNumeroIngresado > 10)
	{
		printf("ingrese un numero entero\n");
		scanf("%d" , &auxNumeroIngresado);
	}
	*pNumeroIngresado = auxNumeroIngresado;
	retorno = 0;
	return retorno;
}
